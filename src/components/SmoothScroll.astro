---

<script>
  import Lenis from "@studio-freight/lenis";

  // ConfiguraciÃ³n optimizada para estÃ©tica institucional
  const lenis = new Lenis({
    duration: 1.4, // DuraciÃ³n glacial (1.4s = mÃ¡s lento que default)
    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)), // ExpoOut suave
    orientation: "vertical",
    gestureOrientation: "vertical",
    smoothWheel: true,
    wheelMultiplier: 1.0, // Velocidad normal de wheel
    touchMultiplier: 2,
    infinite: false,
  });

  // Exponer Lenis globalmente para que otros componentes puedan usarlo
  if (typeof window !== "undefined") {
    (window as any).lenis = lenis;
  }

  // RAF loop para Lenis
  function raf(time: number) {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }

  requestAnimationFrame(raf);

  // Debug (opcional - remover en producciÃ³n)
  if (import.meta.env.DEV) {
    console.log("ðŸŽ¯ Lenis Smooth Scroll initialized");
  }
</script>

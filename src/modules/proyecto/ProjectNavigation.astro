---
/**
 * ProjectNavigation — Navegación entre proyectos
 * Estilo institucional minimalista
 */

interface Props {
  previousProject?: {
    name: string;
    url: string;
  };
  nextProject?: {
    name: string;
    url: string;
  };
}

const { previousProject, nextProject } = Astro.props;
---

<nav class="project-navigation section-spacing">
  <div class="container-arkeon">
    <div class="nav-container">
      <!-- Previous Project -->
      <div class="nav-item nav-item--previous">
        {
          previousProject ? (
            <a href={previousProject.url} class="nav-link font-mono">
              <span class="nav-arrow">←</span>
              <span class="nav-label">PROYECTO ANTERIOR</span>
              <span class="nav-project-name font-serif">
                {previousProject.name}
              </span>
            </a>
          ) : (
            <div class="nav-placeholder" />
          )
        }
      </div>

      <!-- Back to Archive -->
      <div class="nav-item nav-item--center">
        <a href="/#proyectos" class="nav-link nav-link--archive font-mono">
          <span class="nav-label">VOLVER AL ARCHIVO</span>
        </a>
      </div>

      <!-- Next Project -->
      <div class="nav-item nav-item--next">
        {
          nextProject ? (
            <a href={nextProject.url} class="nav-link font-mono">
              <span class="nav-label">PROYECTO SIGUIENTE</span>
              <span class="nav-project-name font-serif">
                {nextProject.name}
              </span>
              <span class="nav-arrow">→</span>
            </a>
          ) : (
            <div class="nav-placeholder" />
          )
        }
      </div>
    </div>
  </div>
</nav>

<style>
  .project-navigation {
    background-color: var(--color-background);
    border-top: 1px solid var(--color-border);
  }

  .nav-container {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--spacing-lg);
    align-items: center;
  }

  /* Nav Items */
  .nav-item {
    display: flex;
  }

  .nav-item--previous {
    justify-content: flex-start;
  }

  .nav-item--center {
    justify-content: center;
  }

  .nav-item--next {
    justify-content: flex-end;
  }

  /* Nav Link */
  .nav-link {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    text-decoration: none;
    color: var(--color-foreground);
    transition: color var(--duration-base) var(--ease-smooth);
  }

  .nav-link:hover {
    color: var(--color-accent);
  }

  .nav-item--next .nav-link {
    align-items: flex-end;
    text-align: right;
  }

  .nav-item--previous .nav-link {
    align-items: flex-start;
  }

  .nav-item--center .nav-link {
    align-items: center;
  }

  /* Nav Components */
  .nav-label {
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-muted);
    transition: color var(--duration-base) var(--ease-smooth);
  }

  .nav-link:hover .nav-label {
    color: var(--color-accent);
  }

  .nav-project-name {
    font-size: 1rem;
    font-weight: var(--font-weight-bold);
    line-height: 1.3;
    max-width: 300px;
  }

  .nav-arrow {
    font-size: 1.25rem;
    line-height: 1;
  }

  .nav-link--archive {
    padding: var(--spacing-sm) var(--spacing-lg);
    border: 1px solid var(--color-border);
    transition: all var(--duration-base) var(--ease-smooth);
  }

  .nav-link--archive:hover {
    border-color: var(--color-accent);
    background-color: rgba(140, 74, 50, 0.05);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-container {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .nav-item {
      justify-content: center !important;
    }

    .nav-link {
      align-items: center !important;
      text-align: center !important;
    }

    .nav-project-name {
      max-width: 100%;
    }
  }
</style>
